Screen:
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen: 
                name: "readings"
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title: "GIK Readings"
                        elevation: 10
                    MDFloatLayout:
                        size_hint: (1,.15)
                        canvas.before:
                            Color:
                                rgba: 243/255, 243/255, 243/255, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        MDTextField:
                            id: user_glu
                            mode: "rectangle"
                            size_hint_x:None
                            hint_text: "Enter Glucose"   
                            write_tab: False 
                            size: self.size
                            pos_hint: {'x': .1, 'y': .15}
                        MDTextField:
                            id: user_key
                            mode: "rectangle"
                            size_hint_x:None
                            hint_text: "Enter Keytones"   
                            write_tab: False 
                            size: self.size
                            pos_hint: {'x': .3, 'y': .15}
                        MDRaisedButton:
                            id: submit_btn
                            text: "Submit"
                            pos_hint: {'center_x': .5, 'center_y':.5}
                            elevation: 10
                            on_press: app.add_reading(user_glu.text,user_key.text)
                    MDFloatLayout:
                        ScrollView:
                            MDList:
                                id: reading_list
                